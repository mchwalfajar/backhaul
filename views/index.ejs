<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Input Data NMC-News</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <h1>Input Data NMC-Announcer</h1>

        <h2>Maintenance</h2>
        <a href="/add/maintenance">Tambah Maintenance</a>
        <table>
            <tr>
                <th>Maintenance</th>
                <th>Detail</th>
                <th>Waktu Downtime</th>
            </tr>
            <% maintenanceItems.forEach(item => { %>
            <tr>
                <td><%= item.maintenance %></td>
                <td><%= item.detail %></td>
                <td><%= item.waktu_downtime %></td>
                <td>
                    <a href="/edit/maintenance/<%= item.id %>">Edit</a>
                    <a href="/delete/maintenance/<%= item.id %>">Hapus</a>
                </td>
            </tr>
            <% }); %>
        </table>

        <h2>Inmarsat</h2>
        <a href="/add/inmarsat">Tambah Inmarsat</a>
        <table>
            <tr>
                <th>Aktivasi</th>
                <th>Deaktivasi</th>
                <th>Awal Periode</th>
                <th>Akhir Periode</th>
            </tr>
            <% inmarsatItems.forEach(item => { %>
            <tr>
                <td><%= item.aktivasi %></td>
                <td><%= item.deaktivasi %></td>
                <td><%= item.awal_periode.toISOString().substring(0, 10) %></td>
                <td>
                    <%= item.akhir_periode.toISOString().substring(0, 10) %>
                </td>
                <td>
                    <a href="/edit/inmarsat/<%= item.id %>">Edit</a>
                    <a href="/delete/inmarsat/<%= item.id %>">Hapus</a>
                </td>
            </tr>
            <% }); %>
        </table>
    </body>
</html>
