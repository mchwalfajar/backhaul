<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Inmarsat</title>
        <!-- Link ke Bootstrap CSS -->
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
        <link
            rel="stylesheet"
            type="text/css"
            href="../public/style/style.css" />
    </head>
    <body>
        <div class="container mt-5">
            <h1>Edit Inmarsat</h1>
            <form method="post" action="/edit/inmarsat/<%= item.id %>">
                <div class="form-group">
                    <label for="aktivasi">Aktivasi:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="aktivasi"
                        name="aktivasi"
                        value="<%= item.aktivasi %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="deaktivasi">Deaktivasi:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="deaktivasi"
                        name="deaktivasi"
                        value="<%= item.deaktivasi %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="awal_periode">Awal Periode:</label>
                    <input
                        type="date"
                        class="form-control"
                        id="awal_periode"
                        name="awal_periode"
                        value="<%= item.awal_periode.toISOString().substring(0, 10) %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="akhir_periode">Akhir Periode:</label>
                    <input
                        type="date"
                        class="form-control"
                        id="akhir_periode"
                        name="akhir_periode"
                        value="<%= item.akhir_periode.toISOString().substring(0, 10) %>"
                        required />
                </div>
                <button type="submit" class="btn btn-primary">
                    Simpan Perubahan
                </button>
            </form>
            <a href="/" class="btn btn-secondary mt-3">Kembali</a>
        </div>
    </body>
</html>
