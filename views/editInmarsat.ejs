<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Announcer Â· Edit Inmarsat Data</title>
        <link
            rel="icon"
            href="../public/img/psn-logo.jpeg"
            type="image/x-icon" />
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
        <link
            rel="stylesheet"
            type="text/css"
            href="../public/style/style.css" />
    </head>
    <body>
        <div class="container mt-5">
            <h1>Edit Inmarsat</h1>
            <form method="post" action="/edit/inmarsat/<%= item.id %>">
                <div class="form-group">
                    <label for="aktivasi_IDR">Aktivasi IDR</label>
                    <input
                        type="text"
                        class="form-control"
                        id="aktivasi_IDR"
                        name="aktivasi_IDR"
                        style="width: 300px"
                        value="<%= item.aktivasi_IDR %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="deaktivasi_IDR">Deaktivasi IDR</label>
                    <input
                        type="text"
                        class="form-control"
                        id="deaktivasi_IDR"
                        name="deaktivasi_IDR"
                        style="width: 300px"
                        value="<%= item.deaktivasi_IDR %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="aktivasi_USD">Aktivasi USD</label>
                    <input
                        type="text"
                        class="form-control"
                        id="aktivasi_USD"
                        name="aktivasi_USD"
                        style="width: 300px"
                        value="<%= item.aktivasi_USD %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="deaktivasi_USD">Deaktivasi USD</label>
                    <input
                        type="text"
                        class="form-control"
                        id="deaktivasi_USD"
                        name="deaktivasi_USD"
                        style="width: 300px"
                        value="<%= item.deaktivasi_USD %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="awal_periode">Awal Periode</label>
                    <input
                        type="date"
                        class="form-control"
                        id="awal_periode"
                        name="awal_periode"
                        style="width: 170px"
                        value="<%= item.awal_periode.toISOString().substring(0, 10) %>"
                        required />
                </div>
                <div class="form-group">
                    <label for="akhir_periode">Akhir Periode</label>
                    <input
                        type="date"
                        class="form-control"
                        id="akhir_periode"
                        name="akhir_periode"
                        style="width: 170px"
                        value="<%= item.akhir_periode.toISOString().substring(0, 10) %>"
                        required />
                </div>
                <a href="/announcer/index" class="btn btn-secondary mt-2">Kembali</a>
                <button type="submit" class="btn btn-primary mt-2">
                    Simpan
                </button></a>
            </form>
        </div>
    </body>
</html>
